{
	"introduction": {
		"title": "Focus Markers (cái)",
		"content": [
			"The focus marker 'cái' is a special particle that indicates contrastive focus - emphasizing one element in contrast to others. It requires specific stress/intonation and must always appear before a classifier.",
			"This is completely different from the classifier 'cái' used for inanimate objects. The focus marker 'cái' can work with any noun regardless of animacy."
		]
	},
	"classifierVsFocus": {
		"title": "Distinguishing: Classifier 'cái' vs Focus Marker 'cái'",
		"description": "These are two different grammatical functions with the same form",
		"comparison": [
			{
				"type": "Classifier cái",
				"function": "Categorizes inanimate objects only",
				"pattern": "cái + noun",
				"examples": [
					{
						"vietnamese": "cái bàn",
						"english": "table",
						"valid": true,
						"note": "bàn (table) is inanimate - OK"
					},
					{
						"vietnamese": "cái chó",
						"english": "dog",
						"valid": false,
						"note": "chó (dog) is animate - WRONG"
					}
				]
			},
			{
				"type": "Focus Marker cái",
				"function": "Adds contrastive emphasis to any noun phrase",
				"pattern": "cái + classifier + noun",
				"examples": [
					{
						"vietnamese": "cái con chó",
						"english": "this very dog (emphasized)",
						"valid": true,
						"note": "Works with animate nouns"
					},
					{
						"vietnamese": "cái cuốn sách",
						"english": "this very book (emphasized)",
						"valid": true,
						"note": "Works with inanimate nouns"
					},
					{
						"vietnamese": "cái người lính",
						"english": "this very soldier (emphasized)",
						"valid": true,
						"note": "Works with human nouns"
					}
				]
			}
		]
	},
	"positionRules": {
		"title": "Position and Requirements",
		"rules": [
			{
				"rule": "Must come BEFORE the classifier",
				"correct": "cái con chó này",
				"correctEnglish": "this very dog",
				"incorrect": "con cái chó này",
				"explanation": "Focus marker precedes the classifier 'con'"
			},
			{
				"rule": "Always requires a classifier",
				"correct": "cái cuốn sách",
				"correctEnglish": "this very book",
				"incorrect": "cái sách",
				"explanation": "Cannot stand alone, must have classifier 'cuốn'"
			},
			{
				"rule": "Precedes numerals and other modifiers",
				"correct": "hai cái con chó đen này",
				"correctEnglish": "these very two black dogs",
				"incorrect": "hai con cái chó đen này",
				"explanation": "Pattern: numeral + cái + classifier + noun"
			}
		]
	},
