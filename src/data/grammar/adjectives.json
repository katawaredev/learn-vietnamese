	"reduplication": [
		{
			"type": "Full Reduplication",
			"pattern": "ADJ + ADJ",
			"effect": "Softens meaning, adds affection or uncertainty",
			"examples": [
				{
					"base": "đẹp",
					"reduplicated": "đẹp đẹp",
					"baseMeaning": "beautiful",
					"reduplicatedMeaning": "somewhat pretty, kinda pretty",
					"vietnamese": "Cái áo này đẹp đẹp",
					"english": "This shirt is kind of pretty"
				},
				{
					"base": "nhỏ",
					"reduplicated": "nhỏ nhỏ",
					"baseMeaning": "small",
					"reduplicatedMeaning": "rather small, quite small",
					"vietnamese": "Con chó nhỏ nhỏ",
					"english": "The dog is quite small"
				},
				{
					"base": "đỏ",
					"reduplicated": "đỏ đỏ",
					"baseMeaning": "red",
					"reduplicatedMeaning": "reddish",
					"vietnamese": "Mặt anh ấy đỏ đỏ",
					"english": "His face is reddish"
				}
			]
		},
		{
			"type": "Partial Reduplication",
			"pattern": "PREFIX + ADJ (with phonetic variation)",
			"effect": "Creates refined or intensified meaning",
			"examples": [
				{
					"base": "sạch",
					"reduplicated": "sạch sẽ",
					"baseMeaning": "clean",
					"reduplicatedMeaning": "clean and tidy, neat",
					"vietnamese": "Phòng này sạch sẽ",
					"english": "This room is clean and tidy"
				},
				{
					"base": "đẹp",
					"reduplicated": "đẹp đẽ",
					"baseMeaning": "beautiful",
					"reduplicatedMeaning": "beautiful, refined",
					"vietnamese": "Cô ấy đẹp đẽ",
					"english": "She is beautifully refined"
				},
				{
					"base": "xinh",
					"reduplicated": "xinh xinh",
					"baseMeaning": "pretty",
					"reduplicatedMeaning": "quite pretty",
					"vietnamese": "Bông hoa xinh xinh",
					"english": "The flower is quite pretty"
				}
			]
		},
