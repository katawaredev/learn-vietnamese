				},
				{
					"particle": "đã",
					"function": "Request to do first, before other actions",
					"effect": "Indicates priority or sequence",
					"position": "After verb",
					"examples": [
						{
							"command": "Nghe đã!",
							"english": "Listen first! / Wait, listen!",
							"notes": "Asking someone to listen before continuing"
						},
						{
							"command": "Chờ đã!",
							"english": "Wait first!",
							"notes": "Stopping someone before they do something"
						}
					]
				}
			]
		}
