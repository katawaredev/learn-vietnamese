{
	"introduction": {
		"title": "Commands and Imperatives in Vietnamese",
		"content": [
			"Vietnamese commands are simpler than English in structure but more complex in politeness. Unlike English, there's no special imperative form—just use the base verb.",
			"The critical factor is politeness level. Vietnamese culture places enormous weight on social hierarchy and respect, so choosing the right command form is essential to avoid offending.",
			"Commands can range from harsh (bare verb) to extremely polite (vui lòng, xin mời). The particle 'đi' is your friend—it softens commands and makes them feel encouraging rather than demanding."
		]
	},
	"commandTypes": [
		{
			"id": "basic",
			"title": "Basic Commands",
			"description": "The simplest form: just the verb. Adding 'đi' after the verb softens it significantly.",
			"pattern": {
				"structure": "Verb + (đi) + !",
				"template": "[Verb] + (đi)"
			},
			"warning": "Using bare verbs (without đi or politeness markers) can sound harsh. Only appropriate with close friends, family, or children.",
			"keyPoints": [
				"Bare verb = direct and potentially harsh",
				"Verb + đi = softer, encouraging",
				"Subject is usually omitted in commands",
				"Adding pronoun clarifies who you're addressing but can sound more direct"
			],
			"examples": [
				{
					"vietnamese": "Ăn đi!",
					"breakdown": {
						"Ăn": {
							"type": "verb",
							"meaning": "eat"
						},
						"đi": {
							"type": "particle",
							"meaning": "softening/encouraging particle"
						}
					},
					"english": "Eat! / Go ahead and eat!",
					"literalEnglish": "Eat (softly)",
					"notes": "The 'đi' makes this encouraging rather than demanding. Without it, 'Ăn!' sounds harsh."
				},
				{
					"vietnamese": "Ngồi xuống!",
					"breakdown": {
						"Ngồi": {
							"type": "verb",
							"meaning": "sit"
						},
						"xuống": {
							"type": "direction",
							"meaning": "down"
						}
					},
					"english": "Sit down!",
					"literalEnglish": "Sit down",
					"notes": "No 'đi' makes this more direct—appropriate for immediate action or with subordinates"
				},
				{
					"vietnamese": "Nhanh lên!",
					"breakdown": {
						"Nhanh": {
							"type": "verb",
							"meaning": "be quick"
						},
						"lên": {
							"type": "particle",
							"meaning": "urging particle"
						}
					},
					"english": "Hurry up!",
					"literalEnglish": "Quick up",
					"notes": "'Lên' adds urgency and encouragement, similar to 'đi' but with more emphasis on speed"
				},
				{
					"vietnamese": "Con ăn cơm đi!",
					"breakdown": {
						"Con": {
							"type": "subject",
							"meaning": "child (when parent addresses child)"
						},
						"ăn": {
							"type": "verb",
							"meaning": "eat"
						},
						"cơm": {
							"type": "object",
							"meaning": "rice/meal"
						},
						"đi": {
							"type": "particle",
							"meaning": "softening particle"
						}
					},
					"english": "Eat your meal! (parent to child)",
					"literalEnglish": "Child eat meal (softly)",
					"notes": "Adding 'con' clarifies you're speaking to your child and maintains gentle tone"
				}
			]
		},
		{
			"id": "polite",
			"title": "Polite Commands",
			"description": "Essential for strangers, customers, elders, or professional contexts. Vietnamese has three main politeness markers, each with different connotations.",
			"politenessMarkers": [
				{
					"marker": "vui lòng",
					"formality": "Formal/Professional",
					"meaning": "please (lit: happily, willingly)",
					"usage": "Customer service, official settings, written requests",
					"position": "Before verb",
					"example": {
						"vietnamese": "Quý khách vui lòng chờ trong giây lát",
						"breakdown": {
							"Quý khách": {
								"type": "subject",
								"meaning": "honored guest/customer"
							},
							"vui lòng": {
								"type": "modal",
								"meaning": "please (formal)"
							},
							"chờ": {
								"type": "verb",
								"meaning": "wait"
							},
							"trong": {
								"type": "preposition",
								"meaning": "in/for"
							},
							"giây lát": {
								"type": "object",
								"meaning": "a moment"
							}
						},
						"english": "Please wait a moment (to customers)",
						"literalEnglish": "Honored guest please wait in moment",
						"notes": "Standard in service industry—very respectful and professional"
					}
				},
				{
					"marker": "xin mời",
					"formality": "Very Formal/Invitational",
					"meaning": "please (lit: humbly invite)",
					"usage": "Inviting someone to do something, extremely polite",
					"position": "Before subject and verb",
					"example": {
						"vietnamese": "Xin mời anh ngồi",
						"breakdown": {
							"Xin mời": {
								"type": "modal",
								"meaning": "please (invitational)"
							},
							"anh": {
								"type": "subject",
								"meaning": "you (older male)"
							},
							"ngồi": {
								"type": "verb",
								"meaning": "sit"
							}
						},
						"english": "Please have a seat",
						"literalEnglish": "Humbly invite you sit",
						"notes": "Extremely polite—used when inviting someone to do something for their benefit"
					}
				},
				{
					"marker": "làm ơn",
					"formality": "Polite/Conversational",
					"meaning": "please (lit: do a favor)",
					"usage": "Everyday politeness, asking favors",
					"position": "Before verb",
					"example": {
						"vietnamese": "Làm ơn giúp tôi",
						"breakdown": {
							"Làm ơn": {
								"type": "modal",
								"meaning": "please (favor)"
							},
							"giúp": {
								"type": "verb",
								"meaning": "help"
							},
							"tôi": {
								"type": "object",
								"meaning": "me"
							}
						},
						"english": "Please help me",
						"literalEnglish": "Do favor help me",
						"notes": "Less formal than 'vui lòng' but still polite—implies asking a favor"
					}
				}
			],
			"examples": [
				{
					"vietnamese": "Anh vui lòng điền thông tin vào đây",
					"breakdown": {
						"Anh": {
							"type": "subject",
							"meaning": "you (older male/sir)"
						},
						"vui lòng": {
							"type": "modal",
							"meaning": "please (formal)"
						},
						"điền": {
							"type": "verb",
							"meaning": "fill in"
						},
