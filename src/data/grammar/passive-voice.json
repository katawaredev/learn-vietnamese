	"semanticDistinction": {
		"title": "Semantic Distinction: Context Matters",
		"description": "The choice between 'được' and 'bị' depends on PERCEPTION, not just the verb. The same action can use different markers based on whether it's viewed positively or negatively.",
		"comparisons": [
			{
				"context": "Permission vs. Coercion",
				"examples": [
					{
						"vietnamese": "Tôi được bố mẹ cho đi chơi",
						"breakdown": {
							"Tôi": { "type": "subject", "meaning": "I" },
							"được": {
								"type": "passive-positive",
								"meaning": "passive [positive]"
							},
							"bố mẹ": { "type": "object", "meaning": "parents" },
							"cho": { "type": "verb", "meaning": "allow/give" },
							"đi chơi": { "type": "verb", "meaning": "go out" }
						},
						"english": "I was allowed by my parents to go out",
						"literalEnglish": "I PASSIVE.POSITIVE parents allow go-out",
						"evaluation": "Positive: permission is welcomed"
					},
					{
						"vietnamese": "Tôi bị bố mẹ bắt ở nhà",
						"breakdown": {
							"Tôi": { "type": "subject", "meaning": "I" },
							"bị": {
								"type": "passive-negative",
								"meaning": "passive [negative]"
							},
							"bố mẹ": { "type": "object", "meaning": "parents" },
							"bắt": { "type": "verb", "meaning": "force/make" },
							"ở nhà": { "type": "location", "meaning": "stay home" }
						},
						"english": "I was forced by my parents to stay home",
						"literalEnglish": "I PASSIVE.NEGATIVE parents force stay home",
						"evaluation": "Negative: being forced is unwanted"
					}
				]
			},
			{
				"context": "Unwanted Timing",
				"examples": [
					{
						"vietnamese": "Tôi bị bạn gọi dậy lúc 5 giờ sáng",
						"breakdown": {
							"Tôi": { "type": "subject", "meaning": "I" },
							"bị": {
								"type": "passive-negative",
								"meaning": "passive [negative]"
							},
							"bạn": { "type": "object", "meaning": "friend" },
							"gọi dậy": { "type": "verb", "meaning": "wake up" },
							"lúc": { "type": "preposition", "meaning": "at" },
							"5 giờ sáng": { "type": "object", "meaning": "5am" }
						},
						"english": "I was woken up by a friend at 5am",
						"literalEnglish": "I PASSIVE.NEGATIVE friend wake-up at 5-o'clock morning",
						"evaluation": "Negative: waking up isn't inherently bad, but 5am is unwanted"
					}
				]
			},
			{
				"context": "Gift vs. Burden",
				"examples": [
					{
						"vietnamese": "Tôi được tặng một con chó",
						"breakdown": {
							"Tôi": { "type": "subject", "meaning": "I" },
							"được": {
								"type": "passive-positive",
								"meaning": "passive [positive]"
							},
							"tặng": { "type": "verb", "meaning": "give/gift" },
							"một": { "type": "quantifier", "meaning": "one" },
							"con": {
								"type": "classifier",
								"meaning": "[classifier for animals]"
							},
							"chó": { "type": "noun", "meaning": "dog" }
						},
						"english": "I was given a dog",
						"literalEnglish": "I PASSIVE.POSITIVE give one dog",
						"evaluation": "Positive: receiving a gift is good"
					},
					{
						"vietnamese": "Tôi bị cho một đống việc",
						"breakdown": {
							"Tôi": { "type": "subject", "meaning": "I" },
							"bị": {
								"type": "passive-negative",
								"meaning": "passive [negative]"
							},
							"cho": { "type": "verb", "meaning": "give" },
							"một": { "type": "quantifier", "meaning": "one" },
							"đống": { "type": "classifier", "meaning": "pile/heap" },
							"việc": { "type": "noun", "meaning": "work/tasks" }
						},
						"english": "I was given a pile of work",
						"literalEnglish": "I PASSIVE.NEGATIVE give one pile work",
						"evaluation": "Negative: receiving excessive work is a burden"
					}
				]
			}
		]
	},
	"tenseIntegration": {
