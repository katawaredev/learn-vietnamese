{
	"introduction": {
		"title": "Vietnamese Passive Voice: Semantic Encoding",
		"content": [
			"Vietnamese passive voice fundamentally differs from English by encoding whether an action is POSITIVE or NEGATIVE for the subject. This semantic distinction is built into the grammar itself.",
			"While English uses a neutral 'to be + past participle' structure, Vietnamese requires choosing between 'được' (positive/beneficial passive) and 'bị' (negative/detrimental passive).",
			"This choice isn't about the verb itself, but about the PERCEPTION of the action's effect on the subject—making Vietnamese passive voice inherently evaluative."
		]
	},
	"basicStructure": {
		"title": "Two Passive Markers",
		"description": "Vietnamese has two passive markers that encode the speaker's evaluation of the action",
		"markers": [
			{
				"marker": "được",
				"meaning": "passive (positive/neutral)",
				"evaluation": "beneficial, desired, or neutral outcome",
				"pattern": "SUBJECT + được + (AGENT) + VERB",
				"commonWith": [
					"khen (praise)",
					"thưởng (reward)",
					"tặng (give/gift)",
					"chọn (choose)",
					"mời (invite)",
					"giúp (help)",
					"yêu (love)",
					"tôn trọng (respect)",
					"thăng chức (promote)",
					"chữa (cure)"
				]
			},
			{
				"marker": "bị",
				"meaning": "passive (negative)",
				"evaluation": "harmful, undesired, or detrimental outcome",
				"pattern": "SUBJECT + bị + (AGENT) + VERB",
				"commonWith": [
					"mắng (scold)",
					"phạt (punish)",
					"đánh (hit)",
					"lừa (deceive)",
					"đuổi (chase away)",
					"sa thải (fire)",
					"từ chối (reject)",
					"đánh cắp (steal)",
					"phá hoại (destroy)",
					"bắt (arrest)"
				]
			}
		]
	},
	"positivePassive": {
		"id": "duoc",
		"title": "Positive Passive: được",
		"description": "Used when the action benefits or doesn't harm the subject. The outcome is desirable, positive, or at least neutral.",
		"pattern": "SUBJECT + được + (AGENT) + VERB + (OBJECT)",
		"keyPoint": "'được' signals that the subject benefits from or welcomes the action",
		"examples": [
			{
				"vietnamese": "Tôi được khen",
				"breakdown": {
					"Tôi": { "type": "subject", "meaning": "I" },
					"được": {
						"type": "passive-positive",
						"meaning": "passive [positive]"
					},
					"khen": { "type": "verb", "meaning": "praise" }
				},
				"english": "I was praised",
				"literalEnglish": "I PASSIVE.POSITIVE praise",
				"notes": "Being praised is positive for the subject"
			},
			{
				"vietnamese": "Anh ấy được thăng chức",
				"breakdown": {
					"Anh ấy": { "type": "subject", "meaning": "he" },
					"được": {
						"type": "passive-positive",
						"meaning": "passive [positive]"
					},
					"thăng chức": { "type": "verb", "meaning": "promote" }
				},
				"english": "He was promoted",
				"literalEnglish": "He PASSIVE.POSITIVE promote",
				"notes": "Promotion is beneficial"
			},
			{
				"vietnamese": "Cuốn sách này được viết bởi Nguyễn Du",
				"breakdown": {
					"Cuốn": { "type": "classifier", "meaning": "[classifier for books]" },
					"sách": { "type": "noun", "meaning": "book" },
					"này": { "type": "demonstrative", "meaning": "this" },
					"được": {
						"type": "passive-positive",
						"meaning": "passive [positive]"
					},
					"viết": { "type": "verb", "meaning": "write" },
					"bởi": { "type": "preposition", "meaning": "by" },
					"Nguyễn Du": { "type": "object", "meaning": "Nguyen Du" }
				},
				"english": "This book was written by Nguyễn Du",
				"literalEnglish": "Book this PASSIVE.POSITIVE write by Nguyen-Du",
				"notes": "Neutral/prestigious, uses 'bởi' to introduce agent"
			},
			{
				"vietnamese": "Học sinh được tặng sách",
				"breakdown": {
					"Học sinh": { "type": "subject", "meaning": "students" },
					"được": {
						"type": "passive-positive",
						"meaning": "passive [positive]"
					},
					"tặng": { "type": "verb", "meaning": "give/gift" },
					"sách": { "type": "object", "meaning": "books" }
				},
				"english": "Students were given books",
				"literalEnglish": "Students PASSIVE.POSITIVE give books",
				"notes": "Receiving gifts is positive"
			},
			{
				"vietnamese": "Tôi được bạn giúp đỡ",
				"breakdown": {
					"Tôi": { "type": "subject", "meaning": "I" },
					"được": {
						"type": "passive-positive",
						"meaning": "passive [positive]"
					},
					"bạn": { "type": "object", "meaning": "friend" },
					"giúp đỡ": { "type": "verb", "meaning": "help" }
