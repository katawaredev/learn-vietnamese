	"introduction": {
		"title": "Vietnamese Exclamations",
		"content": [
			"Vietnamese exclamations express emotions, feelings, and reactions through particles added to sentences. Unlike English, where intonation alone can convey excitement, Vietnamese uses specific particles to mark exclamatory mood.",
			"The key to authentic exclamations is combining the right particle with proper intonation. The same sentence with different particles can convey different levels of intensity and formality.",
			"Vietnamese has a rich system of exclamatory particles, each with subtle nuances. Mastering these particles will make your Vietnamese sound more natural and emotionally expressive."
		],
		"warning": "Intonation is CRUCIAL for exclamations! The rising tone and emphasis make all the difference between a statement and an exclamation. Always listen to native speakers."
	},
	"particles": [
		{
			"particle": "quá",
			"meaning": "so / too / very",
			"intensity": "High",
			"formality": "Neutral",
			"position": "After adjective/verb",
			"usage": "Most common exclamation particle. Emphasizes excess or strong degree. Can be positive or negative depending on context.",
			"pattern": "Subject + Adjective/Verb + quá!",
			"examples": [
				{
					"vietnamese": "Đẹp quá!",
					"breakdown": {
						"Đẹp": {
							"type": "adjective",
							"meaning": "beautiful"
						},
						"quá": {
							"type": "particle",
							"meaning": "so/too"
						}
					},
					"english": "So beautiful!",
					"literalEnglish": "Beautiful too!",
					"notes": "Most common way to express admiration"
				},
				{
					"vietnamese": "Trời mưa to quá!",
					"breakdown": {
						"Trời": {
							"type": "subject",
							"meaning": "sky/weather"
						},
						"mưa": {
							"type": "verb",
							"meaning": "rain"
						},
						"to": {
							"type": "adjective",
							"meaning": "big/heavy"
						},
						"quá": {
							"type": "particle",
							"meaning": "so/too"
						}
					},
					"english": "It's raining so hard!",
					"literalEnglish": "Sky rains big too!",
					"notes": "Can express concern or complaint"
				}
			]
		},
		{
			"particle": "thế",
			"meaning": "like that / such",
			"intensity": "Medium",
			"formality": "Neutral",
			"position": "After adjective/verb",
			"usage": "Slightly softer than 'quá'. Often implies surprise or realization.",
			"pattern": "Subject + Adjective/Verb + thế!",
			"examples": [
				{
					"vietnamese": "Đẹp thế!",
					"breakdown": {
						"Đẹp": {
							"type": "adjective",
							"meaning": "beautiful"
						},
						"thế": {
							"type": "particle",
							"meaning": "like that"
						}
					},
					"english": "So beautiful!",
					"literalEnglish": "Beautiful like that!",
					"notes": "More surprised tone than 'quá'"
				}
			]
		},
		{
			"particle": "thật là",
			"meaning": "really / truly",
			"intensity": "Medium-High",
			"formality": "Formal/Literary",
			"position": "Before adjective",
			"usage": "More formal and literary. Emphasizes sincerity or strong conviction.",
			"pattern": "Subject + thật là + Adjective!",
			"examples": [
				{
					"vietnamese": "Cảnh này thật là tuyệt vời!",
					"breakdown": {
						"Cảnh": {
							"type": "noun",
							"meaning": "scenery"
						},
						"này": {
							"type": "demonstrative",
							"meaning": "this"
						},
						"thật là": {
							"type": "particle",
							"meaning": "really/truly"
						},
						"tuyệt vời": {
							"type": "adjective",
							"meaning": "wonderful"
						}
					},
					"english": "This scenery is truly wonderful!",
					"notes": "More formal, often used in writing"
				}
			]
		},
		{
			"particle": "luôn",
			"meaning": "really / indeed (emphasis)",
			"intensity": "Very High",
			"formality": "Informal/Colloquial",
			"position": "End of sentence",
			"usage": "Adds extra emphasis, very enthusiastic. Southern Vietnam especially.",
			"pattern": "Subject + quá + Adjective + luôn!",
			"examples": [
				{
					"vietnamese": "Ngon quá luôn!",
					"breakdown": {
						"Ngon": {
							"type": "adjective",
							"meaning": "delicious"
						},
						"quá": {
							"type": "particle",
							"meaning": "so/too"
						},
						"luôn": {
							"type": "particle",
							"meaning": "indeed/really"
						}
					},
					"english": "So delicious!",
					"literalEnglish": "Delicious too indeed!",
					"notes": "Very enthusiastic, casual tone"
				}
			]
		}
