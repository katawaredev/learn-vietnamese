{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "check",
			"type": "shell",
			"command": "npm",
			"args": ["run", "check"],
			"problemMatcher": ["$tsc"],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			}
		},
		{
			"label": "typecheck",
			"type": "shell",
			"command": "npm",
			"args": ["run", "typecheck"],
			"problemMatcher": ["$tsc"],
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			}
		}
	]
}
